  </meta>
  <url value="http://koppeltaal.nl/fhir/StructureDefinition/KT2Task" />
  <version value="0.8.0" />
  <name value="KT2_Task" />
  <status value="draft" />
  <date value="2023-01-24" />
  <publisher value="VZVZ" />
  <contact>
    <name value="VZVZ" />
    <telecom>
      <system value="url" />
